{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
